# Azure Deployment Configuration
# https://docs.microsoft.com/azure/app-service/

# Node.js version
WEBSITE_NODE_DEFAULT_VERSION=18-lts

# Enable production mode
NODE_ENV=production

# Database will use Azure SQL Database or mounted storage
# For SQLite, use persistent storage mount

# Azure Storage for file uploads
AZURE_STORAGE_ACCOUNT=${AZURE_STORAGE_ACCOUNT}
AZURE_STORAGE_KEY=${AZURE_STORAGE_KEY}
AZURE_STORAGE_CONTAINER=documents

# Port (Azure assigns automatically)
PORT=8080

# Frontend URL (update after deployment)
FRONTEND_URL=https://your-app-name.azurewebsites.net

# Logging
WEBSITE_HTTPLOGGING_RETENTION_DAYS=7
WEBSITES_ENABLE_APP_SERVICE_STORAGE=true
